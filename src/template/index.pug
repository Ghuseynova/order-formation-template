extends ../pug/layout.pug


block content
    section.s-main
        .container
            .s-main__content
                h1.h1.s-main__title
                |Lorem ipsum dolor sit amet consectetur adipiscing
                .s-desc.s-main__desc
                    h3.h3.s-desc__title At vero eos et accusamus et iusto odio dignissimos ducimus!
                    ul.s-desc__list
                        li.s-desc__item Totam rem aperiam eaque ipsa
